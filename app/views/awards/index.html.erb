<div class="modal fade" id="wrapup-modal">
  <div class="modal-dialog">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title">&nbsp;</h4>
    </div>
    <div class="modal-content">
      <div class="modal-body text-center">
        <div class="embed-responsive embed-responsive-16by9" id="wrapup-player">
        </div>
      </div>
    </div>
  </div>
</div>

<div class="slide parallax-window" data-parallax="scroll" data-image-src="<%= image_path('show/jellyfish.jpg') %>">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h1><%= t "cg.menu.awards" %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-11 col-xs-offset-1">
      <ul class="list-inline">
        <li class="button-icon" id="play-wrapup-video">
          <a href="#" id="launch-wrapup-video"><%= t "cg.copy.home.play_wrapup_video" %></a></li>
      </ul>
    </div>
  </div>
</div>

<div class="row content padding-top-0 padding-bottom-0">
  <div class="col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-1">
    <%= t('cg.copy.awards.introduction').html_safe %>
  </div>
</div>

<div class="row content padding-top-15">
  <div class="col-xs-10 col-xs-offset-1 col-md-11 col-md-offset-1">
    <div class="diagonal-line-container clearfix">
      <div class="diagonal-line even"></div>
    </div>

    <% if @awards.try(:any?) %>
      <ul class="list-unstyled">
        <% @awards.each_with_index do |award, index| %>
          <li><%= render partial: 'awards/award', locals: { award: award, index: index + 1 }  %></li>
        <% end %>
      </ul>
    <% else %>
      <p><%= t('cg.awards.no_awards_found') %></p>
    <% end %>
  </div>

  <div class="col-xs-10 col-xs-offset-1 col-md-11 col-md-offset-1">
  <h2 class="title-redlines text-center">
    <a href="http://d12.paris/" target="_blank"><strong><%= t('cg.copy.awards.redlines_are_not') %></strong></a><br />
    #redlines #d12
  </h2>
  </div>

</div>
