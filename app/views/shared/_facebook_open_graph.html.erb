<meta property="og:title" content="<%= browser_title(yield(:title)) %>" />
<meta property="og:site_name" content="<%= t "cg.climate_games_name" %>" />
<meta property="og:url" content="<%= request.url.gsub("#{request.domain}/", "#{request.domain}/#{I18n.locale.to_s}/") %>" />

<% unless content_for?(:meta) %>
	<meta property="og:description" content="<%= t "cg.site_description" %>" />
	<meta property="og:image" content="<%= image_url(header_image(@page)) %>" />
	<meta property="og:image:width" content="1170" />
	<meta property="og:image:height" content="626" />
<% end %>

<meta property="article:author" content="https://www.facebook.com/climategames" />

<%- if ::I18n.locale =~ /en/i %>
  <meta property="og:locale" content="en_GB" />
<% else %>
  <meta property="og:locale" content="fr_FR" />
<% end %>