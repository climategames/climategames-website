<div class="row content">
  <div class="col-xs-10 col-xs-offset-1">
    <div class="row">
      <div class="col-xs-4" style="background: #f1f1f1;">
        <%= image_tag @team.image.url(:small), class: 'img-responsive avatar' %>
      </div>

      <div class="col-xs-8">
        <%= simple_form_for @team, url: team_path(@team, locale: I18n.locale), html: { multipart: true } do |f| %>
          <%= f.error_notification %>
          <%= f.input :password, required: true, label: t("cg.copy.teams.new.shared_team_password") %>
          <fieldset id="locked">
            <%= f.input :name, label: t("cg.copy.teams.new.team_name") %>
            <%= f.input :nature, label: t("cg.copy.teams.edit.nature"), input_html: { rows: 6 }, placeholder: t("cg.copy.teams.new.add_a_description") %>
            <%= f.input :image, as: :file, required: true, label: t('cg.copy.teams.edit.image') %>
            <div class="text-right margin-top-20 margin-bottom-20">
              <%= f.button :submit, class: 'btn btn-magenta' %>
            </div>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>